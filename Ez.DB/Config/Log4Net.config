<?xml version="1.0"?>
<!--ADD:log4net配置-->
<log4net>
  <root>
    <priority value="ALL"/>
    <appender-ref ref="InfoAppender"/>
    <appender-ref ref="ErrorAppender"/>
    <appender-ref ref="DebugAppender"/>
  </root>

  <logger name="DefaultLogger">
    <level value="Error"/>
  </logger>

  <appender name="InfoAppender" type="log4net.Appender.RollingFileAppender,log4net">
    <param name="File" value="C:\DbMaster\Info.log"/>
    <param name="AppendToFile" value="true"/>
    <param name="StaticLogFileName" value="true"/>
    <param name="MaxSizeRollBackups" value="-1"/>
    <param name="MaximumFileSize" value="5MB"/>
    <param name="RollingStyle" value="Composite"/>
    <param name="DatePattern"  value="yyyyMMdd" />
    <layout type="log4net.Layout.PatternLayout,log4net">
      <param name="ConversionPattern" value="%d [%t] %5p - %m%n"/>
    </layout>
    <filter type="log4net.Filter.LevelRangeFilter">
      <param name="LevelMin" value="INFO" />
      <param name="LevelMax" value="INFO" />
    </filter>
  </appender>

  <appender name="ErrorAppender" type="log4net.Appender.RollingFileAppender,log4net">
    <param name="File" value="C:\DbMaster\Error.log"/>
    <param name="AppendToFile" value="true"/>
    <param name="StaticLogFileName" value="true"/>
    <param name="MaxSizeRollBackups" value="-1"/>
    <param name="MaximumFileSize" value="5MB"/>
    <param name="RollingStyle" value="Composite"/>
    <param name="DatePattern"  value="yyyyMMdd" />
    <layout type="log4net.Layout.PatternLayout,log4net">
      <param name="ConversionPattern" value="%d [%t] %5p - %m%n"/>
    </layout>
    <filter type="log4net.Filter.LevelRangeFilter">
      <param name="LevelMin" value="ERROR" />
      <param name="LevelMax" value="ERROR" />
    </filter>
  </appender>

  <appender name="DebugAppender" type="log4net.Appender.RollingFileAppender,log4net">
    <param name="File" value="C:\DbMaster\Debug.log"/>
    <param name="AppendToFile" value="true"/>
    <param name="StaticLogFileName" value="true"/>
    <param name="MaxSizeRollBackups" value="-1"/>
    <param name="MaximumFileSize" value="5MB"/>
    <param name="RollingStyle" value="Composite"/>
    <param name="DatePattern"  value="yyyyMMdd" />
    <layout type="log4net.Layout.PatternLayout,log4net">
      <param name="ConversionPattern" value="%d [%t] %5p - %m%n"/>
    </layout>
    <filter type="log4net.Filter.LevelRangeFilter">
      <param name="LevelMin" value="DEBUG" />
      <param name="LevelMax" value="DEBUG" />
    </filter>
  </appender>
</log4net>
